{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "imports/*": ["imports/*"] },
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"allowJs": true,
		"jsx": "react",
		"target": "es5",
		"lib": ["dom", "esnext"],
		"downlevelIteration": true,
		"skipLibCheck": true,
		"strict": true,
		"types": ["mocha"]
	},
	"include": ["./imports/**/*", "./client/**/*", "./server/**/*"]
}
